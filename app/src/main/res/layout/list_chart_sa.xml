<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">


    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/tvPositionSA"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@color/grey"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <RelativeLayout
            android:id="@+id/rlCIVSA"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:layout_toRightOf="@+id/tvPositionSA">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civTeamIconSA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/img_1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlNameSA"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/rlCIVSA"
            android:background="@color/grey">

            <TextView
                android:id="@+id/tvNameTeamSA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical|left|start"
                android:text="Man City"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvWSA"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:layout_toRightOf="@+id/rlNameSA"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvLSA"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:layout_toRightOf="@+id/tvWSA"
            android:gravity="center"
            android:text="13"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvDSA"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:layout_toRightOf="@+id/tvLSA"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvPSA"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:layout_toRightOf="@+id/tvDSA"
            android:background="@color/grey"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/black"
            android:textSize="10sp" />




    </RelativeLayout>

</RelativeLayout>